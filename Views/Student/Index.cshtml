<script>
    $(document).keydown(function (e) {
        //enter
        if (e.which == 13) {
            onKeyEnterViewStudent();
        }
    })
    document.getElementById("filter-scholastic").style.display = 'block';
</script>
<div class="warning-modal">
    <div class="modal fade" id="add-class" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content card-style">
                <div class="modal-header px-0 border-1">
                    <h5 class="text-bold">THÊM LỚP</h5>

                    <button class="border-0 bg-transparent h1"
                            data-bs-dismiss="modal">
                        <i class="lni lni-cross-circle"></i>
                    </button>
                </div>
                <div class="modal-body px-0">
                    <div class="content mb-30">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-sm-6 mb-20">
                                <label class="form-label">Khối lớp:</label>
                                @Html.DevExpress().ComboBox(settings =>
                                {
                                   settings.Name = "comboBoxAddClass";
                                   settings.Width = Unit.Percentage(100);
                                   settings.Properties.NullText = "Chọn khối lớp";
                                   settings.Properties.TextField = "Name";
                                   settings.Properties.ValueField = "ID";
                                   settings.Properties.ValueType = typeof(int);
                               }).BindList(ViewBag.GradeGroupData).Bind(ViewBag.FristGradeGroupData).GetHtml()
                            </div>
                            <div class="col-xl-6 col-lg-6 col-sm-6 mb-20">
                                <label class="form-label">Hậu tố:</label>
                                @Html.DevExpress().TextBox(settings =>
                                {
                                    settings.Name = "textBoxNameClass";
                                    settings.Width = Unit.Percentage(100);

                                }).GetHtml()
                            </div>


                            <div class="col">
                                <label class="form-label">Ghi chú:</label>
                                @Html.DevExpress().TextBox(settings =>
                                {
                               settings.Name = "textBoxNoteClass";
                               settings.Width = Unit.Percentage(100);
                               settings.Height = Unit.Percentage(100);
                           }).GetHtml()
                            </div>
                        </div>
                    </div>
                    <div class="action d-flex flex-wrap justify-content-end mt-5">
                        <button data-bs-dismiss="modal"
                                class="main-btn danger-btn-outline btn-hover m-1">
                            Hủy
                        </button>
                        <button onclick="AddClassSubmit()"
                                class="main-btn primary-btn btn-hover m-1">
                            Lưu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>