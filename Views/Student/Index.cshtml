@{
    ViewBag.Title = "Danh sách lớp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <script type="text/javascript" src="@Url.Content("~/Content/Custom/Scripts/Category/Student.js?v=20220513")"></script>
}

<style>
    .uppercase input {
        text-transform: uppercase;
    }

    .dxflRequired_Office365 {
        color: #ff0000;
    }

    .dxgvHeader_Office365 {
        background-color: #1c53a3;
        color: #fff;
    }

    .dxgv {
        border-bottom: 1px solid #d1d1d1 !important;
    }
</style>

<div class="container-fluid">
    <!-- ========== title-wrapper start ========== -->
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <div class="title d-flex align-items-center flex-wrap mb-30">
                        <h2 class="mr-40" style="color: #219653; font-weight:600;">Danh sách lớp</h2>
                        <a href="#" onclick="CreateGrade()" class="main-btn primary-btn btn-hover btn-sm">
                            <i class="lni lni-plus mr-5"></i> Thêm lớp
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol style="display: flex; flex-wrap: wrap; padding: 0 0; margin-bottom: 1rem; list-style: none;">
                            <li>
                                @using (Html.BeginForm())
                                {
                                    ViewContext.Writer.Write("<div id=\"contentSubClass\" style=\"display:block;\">");
                                    Html.RenderPartial("ComboboxScholasticPartital");
                                    ViewContext.Writer.Write("</div>");
                                }
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <div class="projects-wrapper">
        <div class="row d-flex justify-content-start" id="content-lesson">
            @Html.Partial("ContentClassPartial")
        </div>
        <!-- End Row -->
    </div>
