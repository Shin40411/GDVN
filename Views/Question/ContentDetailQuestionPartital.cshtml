                                    <i class="lni lni-pencil-alt"></i>
                                </button>

                            </div>
                        </div>
                    </div>
                }*@
        }
    }
    <style>
        .answerBorderSuccess {
            border: 1px solid #219653;
        }
        .answerBorderPrimary {
            border: 1px solid #4a6cf7;
        }

        .answerBorderGray {
            border: 1px solid #5d657b;
        }
        .answerBorderError {
            border: 1px solid #d50100;
        }
    </style>
    <script>
    function chooseanswerQuestion(e) {
        var nameSTT = [ "A", "B", "C", "D", "E", "F", "G", "H" ];
        for (let i = 0; i < `@ViewBag.AnswerDetailData.Count`; i++) {
            var element = document.getElementById(i);
            var elementbutton = document.getElementById(nameSTT[i]).firstElementChild;
            if (element.classList.contains("answerBorderPrimary")) {
                element.classList.remove("answerBorderPrimary");
                element.classList.add("answerBorderGray");
                elementbutton.style.backgroundColor = "#5d657b";
            }
                
        }
        var answerQuestion = document.getElementById(e);
        answerQuestion.classList.remove("answerBorderGray");
        answerQuestion.classList.add("answerBorderPrimary");
        var answerQuestionButton = document.getElementById(nameSTT[e]).firstElementChild;
        answerQuestionButton.style.backgroundColor = "#4a6cf7";


    }
        var check = Number(document.getElementById("TypeChoiceQuestionViewQuestion").value);

        if (check == 0) {
            document.getElementById("button-addanswerview").style.display = "none";
        }
        else {
            document.getElementById("button-addanswerview").style.display = "none";
        }
    </script>
}