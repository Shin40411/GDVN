                            if (ViewBag.ChildQuestion != null)
                            {
                                var STTChoice = 1;
                                for (var i = 0; i < ViewBag.ChildQuestion.Count; i++)
                                {
                                    <div class="col-md-12 col-lg-12 col-xl-12 mb-30" style="margin:10px">
                                        <div style="padding-left:33px;">
                                            <b>Câu @STTChoice: </b><span>@ViewBag.ChildQuestion[i].Name </span>
                                        </div>

                                        @if (Model != null)
                                        {
                                            var answerList = Model.Where(x => x.QuestionId == ViewBag.ChildQuestion[i].ID).ToList();
                                            int lenghtAnswerList = 0;
                                            foreach (var answer in answerList)
                                            {
                                                lenghtAnswerList += answer.Name.Length;
                                            }
                                            if (answerList.Count > 0)
                                            {
                                                if (lenghtAnswerList < 40)
                                                {
                                                    for (var j = 0; j < answerList.Count; j++)
                                                    {
                                                        <div class="col" style="text-align: justify;">@arrayAnwser[j]. @answerList[j].Name</div>
                                                    }
                                                }
