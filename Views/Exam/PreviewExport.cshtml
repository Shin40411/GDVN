                                                {
                                                    <table style="width: 100%; border-collapse: collapse">
                                                        <tbody>
                                                            <tr>
                                                                @for (var j = 0; j < answerList.Count; j++)
                                                                {
                                                                    if (arrayAnwser[j] == "A" || arrayAnwser[j] == "B")
                                                                    {
                                                                        <th style="text-align:left">
                                                                            <div style="font-weight:100; font-size: 12pt; font-family: 'Times New Roman', Times, serif;">@arrayAnwser[j]. @answerList[j].Name</div>
                                                                        </th>
                                                                    }
                                                                }
                                                            </tr>
                                                            <tr>
                                                                @for (var j = 0; j < answerList.Count; j++)
                                                                {
                                                                    if (arrayAnwser[j] == "C" || arrayAnwser[j] == "D")
                                                                    {
                                                                        <th style="text-align:left">
                                                                            <div style="font-weight: 100; font-size: 12pt; text-transform: capitalize; font-family: 'Times New Roman', Times, serif;">@arrayAnwser[j]. @answerList[j].Name</div>
                                                                        </th>
                                                                    }
                                                                }
                                                            </tr>
                                                        </tbody>
                                                    </table>

                                                }
                                                else
                                                {
                                                    for (var j = 0; j < answerList.Count; j++)
                                                    {
                                                        <div class="col-12">
                                                            @arrayAnwser[j]. @answerList[j].Name
