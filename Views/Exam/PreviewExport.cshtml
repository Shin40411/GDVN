</head>
<body class="A4 landscape">
    <section class="sheet padding-10mm print" id="content">
        <table style="width:100%">
            <tbody>
                <tr>
                    <th>
                        <div class="col uppercase" style="text-align: center;">
                            <b>@Html.Raw(ViewBag.ShoolData.ManageBy.ToString().ToUpper())</b>
                        </div>
                        <div class="col uppercase" style="text-align: center;">
                            <b>@Html.Raw(ViewBag.ShoolData.Name.ToString().ToUpper())</b>
                        </div>
                        <div class="col" style="text-align: center;">
                            <span id="numberPage" style="font-weight: 100;"></span>
                        </div>
                    </th>
                    <th>
                        <div class="col" style="text-align: center;">
                            <b>@Html.Raw(ViewBag.TestData.Description.ToString().ToUpper())</b>
                        </div>
                        <div class="col" style="text-align: center;">
                            <b>Môn học: @Html.Raw(ViewBag.CourseData.Name.ToString().ToUpper())</b>
                        </div>
                        <div class="col" style="text-align: center;">
                            <b><i>Thời gian làm bài:  @Html.Raw(ViewBag.TestData.Time) phút</i></b> <span style="font-weight:100;font-size:9pt">(Không kể thời gian phát đề)</span>
                        </div>
                    </th>
                </tr>
            </tbody>
        </table>

        <div class="row align-items-center">
            <div class="col" style="text-align: center;">
                &nbsp;
            </div>
            <!-- end col -->
            <div class="col" style="text-align: right;padding-top:20px;">
                @if (ViewBag.TestData.Name.ToString() == "000")
                {
                    <b style="border-style: solid; margin-right:10px;padding:5px;">Mã đề: GỐC</b>
                }
                else
                {
                    <b style="border-style: solid; margin-right:10px;padding:5px;">Mã đề: @Html.Raw(ViewBag.TestData.Name.ToString().ToUpper())</b>
                }

            </div>
            <!-- end col -->
        </div>
        <div class="col" style="text-align: center;">
            &nbsp;
        </div>
        <table style="width: 100%; border: 1px solid; border-collapse: collapse" class="details">
            <tbody>
                <tr>
                    <th colspan="4" style="text-align: left; border: 1px solid; padding: 5px;font-weight:100; padding:5px">
                        <b style="font-weight:bold">Trường: @Html.Raw(ViewBag.ShoolData.Name.ToString())</b>
                        <p>Lớp: ............. Phòng thi: .......... Số báo danh: ............... </p>
                        <p>Họ và tên học sinh:........................................................</p>
                    </th>

                    <th style="width: 40%; text-align: left; border: 1px solid; padding: 5px; font-weight:100">
                        <div>
                            <p>Giám thị 1:</p>
                            <p>Giám thị 2:</p>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th height="120" style="border: 1px solid; vertical-align:top; width:25%">
                        <div style="height: 120px;text-align: center;">
                            <p>Điểm bằng số</p>
                        </div>
                    </th>
                    <th height="120" style="border: 1px solid; vertical-align: top; width: 25%">
                        <div style="height: 120px;text-align: center;">
                            <p>Điểm bằng chữ</p>
                        </div>
                    </th>
                    <th colspan="3" height="120" style="border: 1px solid; vertical-align: top; width: 50%">
                        <div style="height: 120px;text-align: center;">
                            <p>Lời phê của giám khảo</p>
                        </div>
                    </th>
                </tr>
            </tbody>
        </table>

        @if (ViewBag.TestData.Name.ToString() == "000")
        {

        }
        else
        {
            <div class="row align-items-center" style="margin: 10px 10px 10px 0px">
                <div class="d-flex justify-content-center"><h3 style="font-weight: bold;">BẢNG TRẢ LỜI TRẮC NGHIỆM <i style="font-size:9pt;font-weight:100">(Học sinh chọn phương án đúng nhất và điền vào bảng dưới đây)</i></h3></div>
                <table width="100%" style="border-collapse: collapse" class="table table-bordered border-dark">
                    <tbody>
                        <tr>
                            <th style="width:0; border:1px solid;text-align:left;padding:10px">Câu</th>
                            @{
                                var STT = 1;
                                for (var i = 0; i < ViewBag.ChildQuestion.Count; i++)
                                {
                                    <th style="text-align: center; border: 1px solid">@STT</th>
                                    STT++;
                                    if (STT == 16)
                                    {
                                        break;
                                    }
                                }
                            }
                        </tr>
                        <tr>
                            <th style="width: 0; border: 1px solid; text-align: left; padding: 10px">Đáp án</th>
                            @for (int i = 1; i < STT; i++)
                            {
                                <th style="width: 60px; border: 1px solid"></th>
                            }
                        </tr>
                    </tbody>
                </table>
                @if (STT == 16)
                {
                    <table width="100%" style="border-collapse: collapse" class="table table-bordered border-dark">
                        <tbody>
                            <tr>
                                <th style="width: 0; border: 1px solid; text-align: left">Câu</th>
                                @{
                                    for (var i = 16; i <= ViewBag.ChildQuestion.Count; i++)
                                    {
                                        <th style="text-align: center; border: 1px solid">@STT</th>
                                        STT++;

                                    }
                                }
                            </tr>
                            <tr>
                                <th style="width: 0; border: 1px solid; text-align: left">Đáp án</th>
                                @for (int i = 16; i < STT; i++)
                                {
                                    <th style="width: 60px; border: 1px solid"></th>
                                }
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
        }

        <div class="align-items-center">
            @if (ViewBag.TestData != null && ViewBag.LevelQuestionData != null)
            {
                if (ViewBag.TypeQuestionData.Count < 21)
                {
                    for (var type = 0; type < ViewBag.TypeQuestionData.Count; type++)
                    {
                        <div class="col-md-12 col-lg-12 col-xl-12 mb-30">
                            <div style="padding-left:33px; ">
                                <h5 style="font-weight: bold; font-size: 1.4rem;">I. PHẦN @Html.Raw(ViewBag.TypeQuestionData[type].Name.ToString().ToUpper()): (@Html.Raw(ViewBag.PointChoice == null ? 0 : ViewBag.PointChoice) điểm)</h5>
                            </div>
                        </div>
                        if (ViewBag.TestData.Name.ToString() == "000")
                        {
                            var STTChoice = 1;
                            for (var level = 0; level < ViewBag.LevelQuestionData.Count; level++)
                            {
                                if (ViewBag.LevelQuestionData[level].TypeId == ViewBag.TypeQuestionData[type].ID)
                                {

                                    var QuestionData = ViewBag.LevelQuestionData[level].Questions;

                                    for (var item = 0; item < QuestionData.Count; item++)
                                    {
                                        <div class="col-md-12 col-lg-12 col-xl-12 mb-30" style="margin:10px">
                                            <div style="padding-left:33px;">
                                                <b>Câu @STTChoice: </b><span>@QuestionData[item].Name </span>
                                                <div style="padding-top:5px;">

                                                </div>
                                            </div>
                                            @if (Model != null)
                                            {
                                                var answerList = Model.Where(x => x.QuestionId == QuestionData[item].ID).ToList();
                                                int lenghtAnswerList = 0;
                                                foreach (var answer in answerList)
                                                {
                                                    lenghtAnswerList += answer.Name.Length;
                                                }
                                                if (answerList.Count > 0)
                                                {

                                                    if (lenghtAnswerList < 40)
                                                    {
                                                        for (var j = 0; j < answerList.Count; j++)
                                                        {
                                                            if (answerList[j].Correct)
                                                            {

                                                                <div class="col" style="margin-bottom: 20px; text-align: justify;"><span style="text-decoration: underline;">@arrayAnwser[j]</span>. @answerList[j].Name</div>
                                                            }
                                                            else
                                                            {

                                                                <div class="col" style="margin-bottom: 20px; text-align: justify;">@arrayAnwser[j]. @answerList[j].Name</div>
                                                            }
                                                        }
                                                    }
                                                    else if (lenghtAnswerList > 40 && lenghtAnswerList < 145)
                                                    {
                                                        <table style="width: 100%; border-collapse: collapse">
                                                            <tbody>
                                                                <tr>
                                                                    @for (var j = 0; j < answerList.Count; j++)
                                                                    {
                                                                        if (arrayAnwser[j] == "A" || arrayAnwser[j] == "B")
                                                                        {
                                                                            if (answerList[j].Correct)
                                                                            {
                                                                                <th style="text-align:left">
                                                                                    <div style="font-weight: 100; font-size: 12pt; text-transform: capitalize; font-family: 'Times New Roman', Times, serif;">
                                                                                        <span style="text-decoration: underline;">@arrayAnwser[j]</span>. @answerList[j].Name
                                                                                    </div>
                                                                                </th>
                                                                            }
                                                                            else
                                                                            {
                                                                                <th style="text-align:left">
                                                                                    <div style="font-weight: 100; font-size: 12pt; text-transform: capitalize; font-family: 'Times New Roman', Times, serif;">@arrayAnwser[j]. @answerList[j].Name</div>
                                                                                </th>
                                                                            }
                                                                        }
                                                                    }
                                                                </tr>
                                                                <tr>
                                                                    @for (var j = 0; j < answerList.Count; j++)
                                                                    {
                                                                        if (arrayAnwser[j] == "C" || arrayAnwser[j] == "D")
                                                                        {
                                                                            if (answerList[j].Correct)
                                                                            {
                                                                                <th style="text-align:left">
                                                                                    <div style="font-weight: 100; font-size: 12pt; text-transform: capitalize; font-family: 'Times New Roman', Times, serif;">
                                                                                        <span style="text-decoration: underline;">@arrayAnwser[j]</span>. @answerList[j].Name
                                                                                    </div>
                                                                                </th>
                                                                            }
                                                                            else
                                                                            {
                                                                                <th style="text-align:left">
                                                                                    <div style="font-weight: 100; font-size: 12pt; text-transform: capitalize; font-family: 'Times New Roman', Times, serif;">@arrayAnwser[j]. @answerList[j].Name</div>
                                                                                </th>
                                                                            }
                                                                        }
                                                                    }
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    }
                                                    else
                                                    {
                                                        for (var j = 0; j < answerList.Count; j++)
                                                        {
                                                            if (answerList[j].Correct)
                                                            {
                                                                <div class="col-12"><span style="text-decoration: underline;">@arrayAnwser[j]</span>. @answerList[j].Name</div>
                                                            }
                                                            else
                                                            {

                                                                <div class="col-12">@arrayAnwser[j]. @answerList[j].Name</div>

                                                            }
                                                        }
                                                    }
                                                }

                                            }
                                        </div>
