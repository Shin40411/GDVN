@Html.DevExpress().ComboBox(settings => {
    settings.Name = "comboBoxCourseScoreFilter";
    settings.Width = Unit.Percentage(100);
    settings.Properties.NullText = "Chọn môn học";
    settings.Properties.TextField = "Name";
    settings.Properties.ValueField = "ID";
    settings.Properties.ValueType = typeof(int);
    settings.Properties.DropDownStyle = DropDownStyle.DropDownList;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
    settings.Properties.TextFormatString = "{0}";
    settings.Properties.Columns.Add("Name", "Tên môn học", Unit.Pixel(150));
    settings.Properties.Columns.Add("GradeGroup.Name", "Khối lớp", Unit.Percentage(50));
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "CourseScoreFilterSelectedIndexChanged";
}).BindList(ViewBag.CourseScoreFilterData).Bind(ViewBag.CourseScoreFilterDataID).GetHtml()