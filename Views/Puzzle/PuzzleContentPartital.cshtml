@if (ViewBag.PuzzleData != null && ViewBag.PuzzleData.Count > 0)
{
    <div class="crosswordDisplay">
        <div class="col-lg-12" style="background-image: url('../../Content/Custom/Images/puzzle.png'); background-position: center; background-repeat: no-repeat; background-size: cover; padding: 100px 0;">
            <div style="margin-bottom:30px;">
                <!-- Create & Play buttons required for user generated crossword - disabled for Proscribed questions -->
                <div class="btn btn-default disabled" id="btnCreate">Create</div>
                <div class="btn btn-default disabled" id="btnPlay">Play</div>
                <div class="card" id="txtMessage">
                    <div class="card-body">
                        Xin chúc mừng! Đây là một đáp án đúng.
                    </div>
                </div>
                <div class="btn btn-success" id="btnReset">Khởi tạo lại</div>
                <div class="btn btn-primary" id="btnCheck">Kiểm tra</div>
            </div>

            <div style="padding:inherit; margin: 10px auto" class="center crossword" id="crossword"></div>

            <div class="btn" id="btnGen">Generate</div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="clueBlock" id="cluesAcross">
                    <div class="clueDirection" id="directionAcross">NGANG</div>
                    @foreach (var item in ViewBag.PuzzleData)
                    {
                        <div class="line">
                            <input class="word" type="text" value="@Html.Raw(item.Answer)" />

                            <span class="lineNum"></span>
                            <input class="clue" value="@Html.Raw(item.Suggest) (@item.Answer.Length)" />
                        </div>
                    }
                </div>

            </div>


            <div class="col-lg-12">
                <div class="clueBlock" id="cluesDown">
                    <div class="clueDirection" id="directionDown">DỌC</div>
                </div>
            </div>
        </div>

    </div>
}
else
{
    <div class="col-lg-12">
        <div class="alert-box primary-alert">
            <div class="alert">
                <h4 class="alert-heading">THÔNG BÁO</h4>
                <p class="text-medium">
                    Chưa có dữ liệu trò chơi ô chữ.
                </p>
            </div>
        </div>
    </div>
}

