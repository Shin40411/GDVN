@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "comboBoxTypeLibraryFilter";
    settings.Width = Unit.Percentage(100);
    settings.SelectedIndex = 0;
    settings.Properties.NullText = "Chọn chủ đề";
    settings.Properties.TextField = "Name";
    settings.Properties.ValueField = "ID";
    settings.Properties.ValueType = typeof(int);
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "TypeLibrarySelectedIndexChanged";
}).BindList(ViewBag.TypeLibraryFilterData).GetHtml()