@Html.DevExpress().ComboBox(settings => {
    settings.Name = "comboBoxTopicLibraryFilter";
    settings.Width = Unit.Percentage(100);
    settings.SelectedIndex = 0;
    settings.Properties.NullText = "Chọn chủ đề";
    settings.Properties.TextField = "Name";
    settings.Properties.ValueField = "ID";
    settings.Properties.ValueType = typeof(int);
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "TopicLibraryFilterSelectedIndexChanged";
}).BindList(ViewBag.TopicFilterData).GetHtml()