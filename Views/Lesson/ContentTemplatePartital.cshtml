<div class="row">
    @if (ViewBag.DataTemplateLesson != null && ViewBag.DataTemplateLesson.Count > 0)
    {
        var listColor = new string[] { "purple", "success", "primary", "orange" };
        var indexColor = 0;

        for (var i = 0; i < ViewBag.DataTemplateLesson.Count; i++)
        {
            var colorClass = listColor[indexColor];
            if (indexColor > 2)
            {
                indexColor = 0;
            }
            else
            {
                indexColor++;
            }


            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="icon-card icon-card-2 mb-30" onclick="ViewFileContent('@ViewBag.DataTemplateLesson[i].Category', '@ViewBag.DataTemplateLesson[i].Path')">
                    @if (ViewBag.DataTemplateLesson[i].PreviewImage != null && ViewBag.DataTemplateLesson[i].PreviewImage.Length > 0)
                    {
                        <img src="@Url.Content("~/Content/Thumbnail/" + ViewBag.DataTemplateLesson[i].PreviewImage)" class="card-img-top" height="200" alt="@Html.Raw(ViewBag.DataTemplateLesson[i].Name)">
                    }
                    else
                    {
                        <img src="@Url.Content("~/Content/Custom/Images/powerpoint-blank.jpg")" class="card-img-top" height="200" alt="@Html.Raw(ViewBag.DataTemplateLesson[i].Name)">
                    }

                    <div class="d-flex align-items-center" style="margin-top:15px;">
                        <div class="icon @colorClass">
                            <a href="#" onclick="ViewFileContent('@ViewBag.DataTemplateLesson[i].Category', '@ViewBag.DataTemplateLesson[i].Path')"><i class="lni lni-pencil-alt"></i></a>
                        </div>
                        <div class="content">
                            <h6 class="mb-10">@Html.Raw(ViewBag.DataTemplateLesson[i].Name)</h6>
                            <h3 class="text-bold mb-10">GD VIỆT NAM</h3>
                            <p class="mb-10">Tác giả: @Html.Raw(ViewBag.DataTemplateLesson[i].Author)</p>
                        </div>
                    </div>
                    <div class="progress bg-@colorClass-100">
                        <div class="progress-bar @colorClass-bg"
                             role="progressbar"
                             style="width: 100%"
                             aria-valuenow="100"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                </div>
                <!-- End Icon Cart -->
            </div>
        }
    }
    else
    {
        <div class="col-lg-12">
            <div class="alert-box primary-alert">
                <div class="alert">
                    <h4 class="alert-heading">THÔNG BÁO</h4>
                    <p class="text-medium">
                        Chưa có dữ liệu mẫu giáo án.
                    </p>
                </div>
            </div>
        </div>
    }

</div>